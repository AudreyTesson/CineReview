{% extends 'base.html.twig' %}

{% block title %}Hello FavoritesController!{% endblock %}

{% block body %}
<!-- main -->

    <div class="container-xl bg-light p-5 border-top">

        <div class="row mb-2">

            <h2 class="text-muted fw-bold mb-4">Ma liste</h2>
            {% for movie in movies %}

                <div class="col-6">

                    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm bg-white position-relative">
                        <div class="col-4 movie__poster" style="background-image: url({{ movie.poster }});">
                            <img src="images/poster-placeholder.png" class="img-fluid">
                        </div>
                        <div class="col-8 p-4 d-flex flex-column position-static">
                            {% include "front/partials/_favorites.html.twig" with {'movieIDForPartial': movie.id}  %}
                            <strong class="d-inline-block mb-2 text-primary">{{ movie.type.name }}</strong>
                            <h3 class="mb-1">{{ movie.title }}</h3>
                            <div class="mb-1 text-muted">{{ movie.duration }} min</div>
                            <a href="{{ path('app_front_movie_show', {'id': movie.id })}}" class="fs-1 mt-3 text-danger align-self-start">
                                <i class="bi bi-arrow-right-square"></i>
                            </a>
                        </div>
                    </div>
                
                </div>
            {% else %}
                <em>vous n'avez pas encore de favoris</em>
            {% endfor %}

        </div>

        <div class="col">
            <a href="{{ path('app_front_favorites_clear')}}" class="btn btn-danger btn-sm" onclick="return confirm('Vider votre liste de favoris ?');">Vider la liste</a>
        </div>

    </div>
{% endblock %}
