{% extends 'base.html.twig' %}

{% block title %}Review
{% endblock %}

{% block body %}

{% include 'back/partials/_tableIdShow.html.twig' with { 'entity' : 'review', 'id' : review.id }  %}

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ review.id }}</td>
			</tr>
			<tr>
				<th>Username</th>
				<td>{{ review.username }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ review.email }}</td>
			</tr>
			<tr>
				<th>Content</th>
				<td>{{ review.content }}</td>
			</tr>
			<tr>
				<th>Rating</th>
				<td>{{ review.rating }}</td>
			</tr>
			<tr>
				<th>Reactions</th>
				<td>{{ review.reactions ? review.reactions|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>WatchedAt</th>
				<td>{{ review.watchedAt ? review.watchedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

{% endblock %}
